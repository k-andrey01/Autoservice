@model Autoservice.Models.Request

@{
    ViewData["Title"] = "Удалить";
}

<h1>Удалить</h1>

<h3>Вы уверены, что хотите удалить эту запись?</h3>
<div>
    <h4>Заявка</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Clients)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Clients.FirstMidName)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Masters)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Masters.FirstMidName)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ClientCars)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClientCars.Number)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="RequestID" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад</a>
    </form>
</div>
